# Google Cloud Platform Configuration
# Copy this file to .env.deploy and fill in your values
# Then run: source .env.deploy

# Your GCP Project ID
export GCP_PROJECT_ID="your-gcp-project-id"

# GCP Region (choose closest to your users)
# Options: us-central1, us-east1, europe-west1, asia-southeast1, etc.
export GCP_REGION="us-central1"

# Backend Environment Variables
# Get your Gemini API key from: https://makersuite.google.com/app/apikey
export GEMINI_API_KEY="your-gemini-api-key-here"

# JWT Secret Key (generate with: openssl rand -base64 32)
export SECRET_KEY="your-generated-secret-key-here"

# Database URL
# For SQLite (development only - not recommended for production):
# export DATABASE_URL="sqlite:///./data/collabfoundry.db"
#
# For Cloud SQL PostgreSQL (production):
# Format: postgresql://user:password@/database?host=/cloudsql/PROJECT:REGION:INSTANCE
export DATABASE_URL="postgresql://postgres:your-password@/collabfoundry?host=/cloudsql/PROJECT:REGION:INSTANCE"

# Cloud SQL Instance Connection Name (if using Cloud SQL)
# Format: PROJECT:REGION:INSTANCE
# Get with: gcloud sql instances describe INSTANCE_NAME --format='value(connectionName)'
export CLOUD_SQL_CONNECTION_NAME="your-project:region:instance-name"

# Optional: Service Account Key Path (for CI/CD)
# export GOOGLE_APPLICATION_CREDENTIALS="/path/to/service-account-key.json"

